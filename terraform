########################################
# data.tf - Obten√ß√£o autom√°tica da VPC default
########################################
data "aws_vpc" "default" {
  default = true # Busca a VPC padr√£o da conta
}

########################################
# main.tf - Recursos principais do projeto
########################################

# Cria um Instance Profile com a Role informada
resource "aws_iam_instance_profile" "workspaces_profile" {
  name = "workspaces-profile-${var.username}" # Nome din√¢mico baseado no usu√°rio
  role = var.iam_role_name # Nome da Role IAM a ser usada
}

# Cria o WorkSpace com todas as op√ß√µes configur√°veis
resource "aws_workspaces_workspace" "this" {
  directory_id = var.directory_id # Diret√≥rio AD (AD Connector)
  bundle_id    = var.bundle_id    # Bundle (tipo de m√°quina)
  user_name    = var.username     # Usu√°rio que receber√° o WorkSpace

  root_volume_encryption_enabled = false # Desativa criptografia do disco raiz
  user_volume_encryption_enabled = false # Desativa criptografia do disco do usu√°rio
  volume_encryption_key          = null  # Chave KMS customizada (n√£o usada aqui)

  workspace_properties {
    compute_type_name                         = "STANDARD" # Tipo de inst√¢ncia
    root_volume_size_gib                      = 80         # Tamanho do disco raiz
    user_volume_size_gib                      = 10         # Tamanho do disco do usu√°rio
    running_mode                              = "AUTO_STOP" # Modo de opera√ß√£o
    running_mode_auto_stop_timeout_in_minutes = 60         # Tempo para auto-stop
  }

  workspace_creation_properties {
    custom_security_group_id    = var.security_group_ids[0] # SG customizado (usar apenas 1)
    default_ou                  = null # OU padr√£o (n√£o usada)
    enable_internet_access      = false # Sem acesso √† internet
    enable_maintenance_mode     = true  # Ativa modo de manuten√ß√£o
    user_enabled_as_local_admin = false # Usu√°rio n√£o √© admin local
    enable_work_docs            = false # Desativa WorkDocs
    enable_monitoring           = false # Desativa monitoramento
    dedicated_tenancy           = false # Sem tenancy dedicado
  }

  tags = {
    Name         = "Workspace-${var.username}" # Nome do recurso
    Projeto      = "POC" # Projeto
    Ambiente     = "DEV" # Ambiente
    CriadoPor    = "Terraform" # Origem da cria√ß√£o
  }

  depends_on = [aws_iam_instance_profile.workspaces_profile] # Garante ordem de cria√ß√£o
}

########################################
# outputs.tf - Resultados ap√≥s o apply
########################################

# Output do ID do WorkSpace criado
output "workspace_id" {
  value       = aws_workspaces_workspace.this.id
  description = "ID do WorkSpace criado"
}

# Output do nome do Instance Profile
output "instance_profile_name" {
  value       = aws_iam_instance_profile.workspaces_profile.name
}



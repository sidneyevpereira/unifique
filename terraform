variables.tf

variable "vpc_id" {
  type        = string
  description = "ID da VPC onde a instância será criada"
}

variable "subnet_id" {
  type        = string
  description = "ID da subnet onde a instância será criada"
}

variable "key_pair_name" {
  type        = string
  description = "Nome do par de chaves SSH"
}

